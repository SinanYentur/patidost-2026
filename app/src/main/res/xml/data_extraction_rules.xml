<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- RVWL: Exclude PII and Auth tokens from cloud backup -->
        <exclude domain="sharedpref" path="com.google.firebase.auth.api.Store.*" />
        <exclude domain="database" path="patidost_database" />
    </cloud-backup>
    <device-transfer>
        <!-- Device-to-device transfer allows local DB for convenience -->
        <include domain="database" path="patidost_database" />
    </device-transfer>
</data-extraction-rules>
